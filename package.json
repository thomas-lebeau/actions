{
  "name": "javascript-action",
  "version": "1.0.0",
  "description": "monorepo of github actions",
  "scripts": {
    "build": "rollup -c",
    "test": "lerna run test"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "builtin-modules": "^3.1.0",
    "eslint": "^6.8.0",
    "globby": "^11.0.1",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "lerna": "^3.22.1",
    "rollup": "^2.35.1"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add ./*/dist/"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {}
  },
  "eslintIgnore": [
    "dist"
  ]
}
